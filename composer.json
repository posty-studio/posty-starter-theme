{
    "name": "posty/posty-starter-theme",
    "type": "package",
    "description": "An opinionated starter theme for WordPress..",
    "keywords": [
        "WordPress",
        "Themes"
    ],
    "homepage": "https://github.com/posty-studio/posty-starter-theme",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4",
        "fig-r/psr2r-sniffer": "^1.0"
    },
    "require-dev": {
        "composer/installers": "~1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/php-compatibility": "*"
    },
    "scripts": {
        "standards:check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "standards:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
        "lint": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor ."
    },
    "support": {
        "issues": "https://github.com/posty-studio/posty-starter-theme/issues",
        "source": "https://github.com/posty-studio/posty-starter-theme"
    }
}
